generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id_cliente      String    @id
  nombre          String
  ruc             String    @unique
  email           String    @unique  // ðŸ‘ˆ hace falta esto
  password        String             // ðŸ‘ˆ nuevo campo para login
  fecha_registro  DateTime
  productos       Producto[]
}

model Producto {
  id_producto         String   @id
  nombre              String
  proveedor           Cliente  @relation(fields: [proveedor_id], references: [id_cliente], onDelete: Cascade)
  proveedor_id        String
  precio_actual       Float
  stock_actual        Int
  estado              String
  fecha_actualizacion DateTime
}
